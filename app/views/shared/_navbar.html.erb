<% if current_page?(root_path) %>
  <% if user_signed_in? %>
    <div class="navbar-wagon transparent" %>
  <% else %>
    <div class="navbar-wagon navbar-user-status transparent">
  <% end %>
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "white_logo_transparent_background.png", height: 50 %>
  <% end %>
<% else %>
  <% if user_signed_in? %>
    <div class="navbar-wagon" %>
  <% else %>
    <div class="navbar-wagon navbar-user-status">
  <% end %>
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo_white_background.png", height: 50 %>
  <% end %>
<% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
    <!-- Links when logged in -->
    <%= link_to "Publish your spot", new_parking_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "My parkings",  owner_parkings_parkings_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Bookings", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <span data-toggle="dropdown">User</span>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
      <% if current_page?(new_user_session_path) %>
        <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% else %>
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Publish your spot", new_parking_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "My parkings",  owner_parkings_parkings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Bookings", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
</div>

