<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-parking">
        <h1>Publish your spot</h1>
        <%= simple_form_for(@parking) do |f| %>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :name, placeholder: "How to design a form" %>
          </div>
          <div class="col-xs-6">
            <%= f.input :size, collection: Parking::SIZE_CAR, prompt: "Which status" %>
          </div>
        </div>
          <!-- Inject categories here -->
          <div class="form-group">
            <label class="control-label check_boxes optional">Features</label>
            <input type="hidden" name="parking[feature_ids][]" value="">
            <div class="feature-choices">
              <% Feature.all.each do |feature| %>
              <div>
                <input type="checkbox" class="hidden" value="<%= feature.id %>" name="parking[feature_ids][]" id="parking_feature_ids_<%= feature.id %>">
                <label class="feature-choice" for="parking_feature_ids_<%= feature.id %>">
                  <!-- <%= feature.name %> -->
                  <div style="background-image: url('<%= cl_image_path feature.icon, height: 200, width: 200 %>');" class="feature-icon">
                </div>
                </label>
                </div>
              <% end %>
             </div>
          </div>
          <%= f.input :description, placeholder: "In this tutorial..." %>
          <%= f.submit "Save", class: "btn btn-primary"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
