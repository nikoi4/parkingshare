<div class="container-fluid" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.6)), url('<%= cl_image_path 'https://res.cloudinary.com/nikoi4/image/upload/v1551219919/sahin-yesilyaprak-1207014-unsplash_1.jpg' %>'); background-position: center; background-size: cover;">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-sm-offset-4">
      <div class="form-parking">
        <h1>Publish your spot</h1>
        <%= simple_form_for(@parking) do |f| %>
          <%= f.input :name, placeholder: "Cochera de" %>
          <%= f.input :address, placeholder: "Coronel Niceto Vega 2222, CABA" %>
          <%= f.input :description, placeholder: "Your spot description" %>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :size, collection: Parking::SIZE_CAR, prompt: "Car size?" %>
          </div>
          <div class="col-xs-6">
            <%= f.input :price_cents, label: "Price / hr",placeholder: "80.00 $/hr" %>
          </div>
        </div>
          <!-- Inject categories here -->
          <div class="features">
            <label class="control-label check_boxes optional">Features</label>
            <input type="hidden" name="parking[feature_ids][]" value="">
            <div class="feature-choices">
              <% Feature.all.each do |feature| %>
              <div>
                <input type="checkbox" class="hidden" value="<%= feature.id %>" name="parking[feature_ids][]" id="parking_feature_ids_<%= feature.id %>">
                <label class="feature-choice" for="parking_feature_ids_<%= feature.id %>">
                  <!-- <%= feature.name %> -->
                  <div style="background-image: url('<%= cl_image_path feature.icon, height: 200, width: 200 %>');" class="feature-icon">
                  </div>
                </label>
                </div>
              <% end %>
             </div>
          </div>
          <div class="form-img">
            <span>Images</span>
            <%= f.simple_fields_for :pictures do |p| %>
              <%= p.input :picture, label: false %>
            <% end %>
            <%= f.simple_fields_for :pictures do |p| %>
              <%= p.input :picture, label: false %>
            <% end %>
            <%= f.simple_fields_for :pictures do |p| %>
              <%= p.input :picture, label: false %>
            <% end %>
          </div>
          <%= f.submit "Save", class: "btn btn-success"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
